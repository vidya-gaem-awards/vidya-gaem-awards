    }

    .award ul {
      list-style-type: none;
      margin: 0;
      font-size: 20px;
      padding-left: 0;

      font-family: "OratorStd", "Courier New", serif;
      font-weight: normal;
      text-shadow: #f29823 0px 0px 3px;
    }

    .award ul li {
      line-height: 1.5em;
    }

    .winner-name {
